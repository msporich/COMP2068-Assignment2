extends layout

block content

    h1 Register for an Account

    form.registerForm(method="post")
        fieldset
            label(for="username") Username:
            input.username(name="username", required)
        fieldset
            label(for="password") Password:
            input.password(name="password", type="password", pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required)
        fieldset
            label(for="confirm") Confirm:
            input.confirm(name="confirm", type="password", pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required)
        fieldset
            button.registerButton Register