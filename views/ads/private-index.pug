extends ../layout

block content
    
    //Mark Sporich, Student #200399323
    //Website: Classified Ads

    h1 Classified Ads - Listings

    a(href="/ads/create") Create a New Classified Ad

    each ad in ads
        ul.adsList
            li.title= ad.title
            li= ad.description
            li= ad.price
            li
                a.confirmDelete(href="/ads/delete/" + ad._id) Delete Ad
            li
                a(href="/ads/edit/" + ad._id) Edit Ad